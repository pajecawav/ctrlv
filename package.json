{
	"name": "ctrlv",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "cross-env NODE_ENV=development run-p -l dev:*",
		"dev:web": "vite",
		"dev:server": "esno watch server/main.ts --clear-screen=false",
		"build": "cross-env NODE_ENV=production run-p -l build:server build:web",
		"build:web": "tsc && vite build",
		"build:server": "tsc -p tsconfig.server.json",
		"start": "node dist/main.js",
		"docker-build": "docker build -t ctrlv .",
		"docker-start": "docker run --rm -p 8000:8000 ctrlv",
		"format": "prettier --write --ignore-path=.gitignore './**/*.{js,jsx,ts,tsx,html,css,json,md,yml}'",
		"format:check": "prettier --check --ignore-path=.gitignore './**/*.{js,jsx,ts,tsx,html,css,json,md,yml}'",
		"clean": "rimraf dist",
		"prepare": "is-ci || husky install"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md,yml,css}": "prettier --write"
	},
	"dependencies": {
		"@fastify/static": "^6.4.0",
		"better-sqlite3": "^7.5.3",
		"dotenv": "^16.0.1",
		"fastify": "^4.2.0",
		"nanoid": "^3.0.0",
		"zod": "^3.17.3"
	},
	"devDependencies": {
		"@babel/plugin-transform-react-jsx": "^7.18.6",
		"@preact/preset-vite": "^2.3.0",
		"@tsconfig/node16": "^1.0.3",
		"@types/better-sqlite3": "^7.5.0",
		"@types/node": "^16.0.0",
		"autoprefixer": "^10.4.7",
		"cross-env": "^7.0.3",
		"dayjs": "^1.11.3",
		"esno": "^0.16.3",
		"husky": "^8.0.1",
		"is-ci": "^3.0.1",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"ohmyfetch": "^0.4.18",
		"pino-pretty": "^8.1.0",
		"postcss": "^8.4.14",
		"preact": "^10.8.2",
		"prettier": "^2.7.1",
		"qrcode.react": "^3.1.0",
		"rimraf": "^3.0.2",
		"swr": "^1.3.0",
		"tailwindcss": "^3.1.4",
		"typescript": "^4.6.3",
		"vite": "^2.9.13",
		"wouter-preact": "2.8.0-alpha.2",
		"zustand": "4.0.0-rc.1"
	}
}
